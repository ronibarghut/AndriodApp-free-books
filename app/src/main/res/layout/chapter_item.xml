<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/ch_it_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="2dp">

        <TextView
            android:id="@+id/ch_title_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
             />

        <TextView
            android:id="@+id/ch_length_it_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ch_title_it"
            android:layout_centerVertical="true"
            android:text="@string/length" />

        <TextView
            android:id="@+id/ch_length_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ch_length_it_lbl"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ch_length_it_lbl"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cmt_ch_it_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ch_length_it"
            android:layout_toEndOf="@id/ch_length_it"
            android:layout_marginStart="10dp"
            android:text="@string/comments" />

        <TextView
            android:id="@+id/cmt_ch_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cmt_ch_it_lbl"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/cmt_ch_it_lbl"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ch_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />
</LinearLayout>